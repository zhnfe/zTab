{
    "extends": "@tsconfig/node24/tsconfig.json",
    "include": [
        "vite.config.*",
        "eslint.config.*",
        "plugins/*",
        "manifest.config.*"
    ],
    "compilerOptions": {
        "composite": true,
        "noEmit": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,
        "types": [
            "node"
        ]
    }
}