{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "exclude": [
        "src/**/__tests__/*",
        "dist",
        "src/.icons"
    ],
    "include": [
        "src/**/*",
        "src/**/*.vue"
    ],
    "compilerOptions": {
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "target": "ESNext",
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "types": [
            "chrome",
            "vite/client"
        ],
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    }
}