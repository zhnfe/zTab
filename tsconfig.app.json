{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "src/**/*",
        "src/**/*.vue",
    ],
    "exclude": [
        "src/**/__tests__/*",
        "dist"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "types": [
            "chrome",
            "vite/client"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    }
}